{
  "manifest_version": 3,
  "name": "Site Security Analyzer",
  "version": "2.0.0",
  "description": "Analyze website security headers and vulnerability scores",
  "permissions": [
    "activeTab",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/*",
    "http://localhost:5173/*",
    "https://api.yourapp.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; base-uri 'self'; form-action 'self';"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
