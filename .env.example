# CRITICAL: Generate strong values for production!
# Use: python -c "import secrets; print(secrets.token_urlsafe(64))"

# Flask Secret Key (REQUIRED - minimum 64 characters)
SECRET_KEY=CHANGE_THIS_TO_A_STRONG_RANDOM_VALUE_AT_LEAST_64_CHARACTERS_LONG

# ─── DATABASE ────────────────────────────────────────────────────────────────
# REQUIRED: app.py crashes without this.
# Local development (Docker Compose):
DATABASE_URL=postgresql://scanner_user:change_me_in_production_use_strong_password@localhost:5432/scanner_db
# Neon (recommended free production host): uncomment and replace with your Neon connection string
# DATABASE_URL=postgresql://user:password@ep-xxx.neon.tech/dbname?sslmode=require

# Database Password (used by Docker Compose postgres service)
DB_PASSWORD=change_me_in_production_use_strong_password

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://yourapp.com,https://www.yourapp.com

# Sentry Error Tracking (optional)
SENTRY_DSN=

# Grafana Admin Password
GRAFANA_PASSWORD=admin_change_me

# Email Configuration (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourapp.com

# Rate Limiting
MAX_SCANS_PER_HOUR=30
MAX_SCANS_PER_DAY=200

# Scan Configuration
SCAN_TIMEOUT_SECONDS=10
MAX_RESPONSE_SIZE_MB=10
MAX_REDIRECTS=3

# Feature Flags
ENABLE_DNS_CHECKS=true
ENABLE_TLS_ANALYSIS=true
ENABLE_COOKIE_ANALYSIS=true
